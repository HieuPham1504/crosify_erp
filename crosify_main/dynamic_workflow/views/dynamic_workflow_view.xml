<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dynamic_workflow_view_tree" model="ir.ui.view">
           <field name="name">dynamic.workflow.tree</field>
           <field name="model">dynamic.workflow</field>
           <field name="arch" type="xml">
               <tree string="">
                   <field name="name"/>
                   <field name="manager_ids" widget="many2many_tags"/>
                   <field name="department_ids" widget="many2many_tags"/>
                   <field name="type"/>
               </tree>
           </field>
        </record>
        <record id="dynamic_workflow_view_form" model="ir.ui.view">
            <field name="name">dynamic.workflow.form</field>
            <field name="model">dynamic.workflow</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <field name="is_not_edit" invisible="1"/>
                        <div class="oe_title">
                            <h1 class="d-flex flex-row">
                                <field name="name" options="{'line_breaks': False}" widget="text" class="o_text_overflow" placeholder="Tên quy trình" readonly="is_not_edit == True"/>
                                <field name="is_used" invisible="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="manager_ids" widget="many2many_tags" options='{"no_open": True, "no_create": True}' readonly="is_not_edit == True"/>
                                <field name="description" readonly="is_not_edit == True"/>
                            </group>
                            <group>
                                <field name="department_ids" widget="many2many_tags" options='{"no_open": True, "no_create": True}' readonly="is_not_edit == True"/>
                                <field name="type" readonly="is_not_edit == True"/>
                            </group>
                        </group>
                        <notebook>

                            <page name="Giai đoạn">
                                <field name="stage_ids" readonly="is_used == True or is_not_edit == True">
                                    <tree no_open="1">
                                        <field name="is_done_stage" column_invisible="1"/>
                                        <field name="sequence" widget="handle" column_invisible="parent.is_used == True or parent.is_not_edit == True"/>
                                        <field name="name"/>
                                        <button name="action_show_details"
                                            type="object"
                                            title="Chi tiết"
                                            icon="fa-list"
                                            width="0.1"
                                            options='{"warn": true}'
                                            />
                                    </tree>
                                </field>
                            </page>
                            <page name="Lí do thất bại">
                                <field name="fail_reason_ids" readonly="is_not_edit == True">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="Tùy chọn">
                                <group>
                                    <field name="department_view_workflow_ids" widget="many2many_tags" options='{"no_open": True, "no_create": True}' readonly="is_not_edit == True"/>
                                    <field name="supervisor" widget="many2many_tags" options='{"no_open": True, "no_create": True}' readonly="is_not_edit == True"/>
                                    <field name="type_view_task" readonly="is_not_edit == True"/>
                                </group>

                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="dynamic_workflow_view_kanban" model="ir.ui.view">
            <field name="name">dynamic.workflow.kanban</field>
            <field name="model">dynamic.workflow</field>
            <field name="arch" type="xml">
                <kanban
                    class="o_kanban_dashboard"
                    action="action_view_tasks" type="object"
                    default_order="is_favorite desc, name, id">
                    <field name="name"/>

                    <templates>
                        <t t-name="kanban-menu" groups="base.group_user">
                            <div class="container">
                                <div class="row">
                                    <div role="menuitem" class="col-12">
                                        <a class="dropdown-item" name="action_view_tasks" type="object">Nhiệm vụ</a>
                                    </div>
                                    <div role="menuitem" class="col-12">
                                        <a class="dropdown-item" role="menuitem" type="edit">Cài đặt</a>
                                    </div>
                                </div>
                            </div>
                        </t>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_has_icon oe_kanban_content oe_kanban_card">
                                <div class="o_project_kanban_main d-flex align-items-baseline gap-1">
                                    <field name="is_favorite" widget="boolean_favorite" nolabel="1" force_save="1"/>
                                    <div class="o_kanban_card_content mw-100">
                                        <div class="o_kanban_primary_left">
                                            <div class="o_primary">
                                                <span class="o_text_overflow" t-att-title="record.name.value"><t t-esc="record.name.value"/></span>
<!--                                                <field name="name"/>-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="action_dynamic_workflow" model="ir.actions.act_window">
            <field name="name">Quy trình</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dynamic.workflow</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>



    </data>
</odoo>