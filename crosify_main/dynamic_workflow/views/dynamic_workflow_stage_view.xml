<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dynamic_workflow_stage_view_tree" model="ir.ui.view">
            <field name="name">dynamic.workflow.stage.tree</field>
            <field name="model">dynamic.workflow.stage</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="name"/>
                    <field name="workflow_id"/>
                </tree>
            </field>
        </record>
        <record id="dynamic_workflow_stage_view_form" model="ir.ui.view">
            <field name="name">dynamic.workflow.stage.form</field>
            <field name="model">dynamic.workflow.stage</field>
            <field name="arch" type="xml">
                <form create="0">
                    <sheet>
                        <field name="is_not_edit" invisible="1"/>
                        <div class="oe_title">
                            <h1 class="d-flex flex-row">
                                <field name="name" options="{'line_breaks': False}" widget="text" class="o_text_overflow" placeholder="Tên giai đoạn" readonly="is_not_edit == True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="workflow_id" options='{"no_create": True}' readonly="1" force_save="1"/>
                                <field name="fold" readonly="is_not_edit == True"/>
                                <field name="work_by_ids" widget="many2many_tags" options='{"no_open": True, "no_create": True}' readonly="is_not_edit == True"/>
                                <field name="assign_method" readonly="is_not_edit == True"/>
                                <field name="description" readonly="is_not_edit == True"/>
                            </group>
                            <group>
                                <field name="type_back_stage" readonly="is_not_edit == True"/>
                                <field name="back_stage_ids" invisible="type_back_stage != 'specifically'" widget="many2many_tags" domain="[('workflow_id', '=', workflow_id), ('id', '!=', id)]" readonly="is_not_edit == True"/>
                                <label for="work_time" readonly="is_not_edit == True"/>
                                <div class="o_row">
                                    <field name="work_time" readonly="is_not_edit == True"/>
                                    <field name="type_set_work_time" readonly="is_not_edit == True"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Trường tùy chỉnh">
                                <field name="dynamic_field_ids" readonly="is_not_edit == True">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="name" string="Tên"/>
                                        <field name="help"/>
                                        <field name="is_required"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="field_type" readonly="id != False"/>
                                                <field name="selection_field" placeholder="Blue; Red; ....."
                                                    required="field_type == 'selection'"
                                                    readonly="field_type != 'selection' or id != False"
                                                    invisible="field_type != 'selection'"
                                                    />
                                                <field name="selection_field_add"
                                                       invisible="field_type != 'selection' or id == False"
                                                       readonly="field_type != 'selection'"/>
                                            </group>
                                            <group>
                                                <field name="is_used" invisible="1"/>
                                                <field name="is_required" readonly="is_used == True"/>
                                                <field name="help"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="dynamic_workflow_stage_action" model="ir.actions.act_window">
            <field name="name">Giai đoạn</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dynamic.workflow.stage</field>
            <field name="view_mode">tree,form</field>
        </record>



    </data>
</odoo>