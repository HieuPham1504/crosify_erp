<odoo>
    <data>

        <record id="ready_to_pack_wizard_form_view" model="ir.ui.view">
            <field name="name">ready_to_pack_wizard_form_view</field>
            <field name="model">ready.packing.item.wizard</field>
            <field name="arch" type="xml">
                <form class="sale_order_view_inherit_form_crosify_order" create="0" edit="0">
                    <header>
                        <button string="Ready To Pack" name="action_ready_to_pack_item" type="object"
                                class="btn-primary"/>

                        <button string="Export PDF" name="action_print_pdf_file" type="object"
                                class="btn-primary"/>
                    </header>
                    <sheet>
                        <br/>
                        <field name="name" invisible="1"/>

                        <field name="line_ids" nolabel="1" readonly="1" force_save="1">
                            <tree>
                                <field name="production_id" readonly="0"/>
                                <field name="sale_order_line_id" column_invisible="1"/>
                                <field name="product_id" readonly="1" string="SKU"/>
                                <field name="address_shelf_id" readonly="1"
                                       options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                                <field name="product_type" readonly="1"/>
                            </tree>
                        </field>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_export_packing_item_barcode" model="ir.actions.report">
            <field name="name">Ready To Pack</field>
            <field name="model">ready.packing.item.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">crosify_order.print_ready_packing_item_pdf</field>
            <field name="report_file">crosify_order.print_ready_packing_item_pdf</field>
            <field name="binding_model_id" ref="model_sale_order_line"/>
        </record>

        <record id="ready_to_pack_item_wizard_menu_action" model="ir.actions.act_window">
            <field name="name">Ready To Pack</field>
            <field name="res_model">ready.packing.item.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>

        <menuitem id="ready_to_pack_item_wizard_menu"
                  name="Ready To Pack"
                  action="ready_to_pack_item_wizard_menu_action"
                  groups="base.group_system,crosify_order.group_sale_team_operator"
                  parent="sale.sale_order_menu"
                  sequence="27"/>
    </data>
</odoo>