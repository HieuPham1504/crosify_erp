<odoo>
    <data>

        <record id="checking_pickup_item_wizard_form_view" model="ir.ui.view">
            <field name="name">checking_pickup_item_wizard_form_view</field>
            <field name="model">checking.pickup.item.wizard</field>
            <field name="arch" type="xml">
                <form class="sale_order_view_inherit_form_crosify_order">
                    <header>
                        <button string="Update" name="action_pickup_items" type="object"
                                class="btn-primary" data-hotkey="q"/>
                    </header>
                    <sheet>
                        <group name="main">
                            <field name="item_ids">
                                <tree string="Orders" editable="bottom" decoration-danger="state == 'fail'" options="{'autosave': true}">
                                    <field name="barcode" force_save="1"/>
                                    <field name="tkn_code" readonly="1" force_save="1"/>
                                    <field name="order_ids" column_invisible="1"/>
                                    <field name="sale_order_line_id" column_invisible="1"/>
                                    <field name="order_tracking_code" column_invisible="1"/>
                                    <field name="is_checked" column_invisible="1"/>
                                    <field name="type" column_invisible="1"/>
                                    <field name="state" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                        </group>
                        <br/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="checking_pickup_item_wizard_menu_action" model="ir.actions.act_window">
            <field name="name">Pickup Item</field>
            <field name="res_model">checking.pickup.item.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>

        <menuitem id="checking_pickup_item_wizard_menu"
                  name="Pickup Item"
                  action="checking_pickup_item_wizard_menu_action"
                  groups="base.group_system,crosify_order.group_sale_team_operator"
                  parent="sale.sale_order_menu"
                  sequence="35"/>
    </data>
</odoo>