<odoo>
    <data>
        <record id="select_product_template_wizard_form_view" model="ir.ui.view">
            <field name="name">select_product_template_wizard_form_view</field>
            <field name="model">select.product.template.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="product_template_id"/>
                    </group>
                    <footer>
                        <button name="action_set_product_template" string="Update Product" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>