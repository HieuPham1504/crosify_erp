<odoo>
    <data>
        <record id="raise_information_wizard_form_view" model="ir.ui.view">
            <field name="name">raise_information_wizard_form_view</field>
            <field name="model">raise.information.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title ps-0 pe-2">
                        <h1 class="d-flex flex-row">
                            Validation Error
                        </h1>
                        <field name="warning" readonly="1"/>
                    </div>
                    <footer>
                        <button string="Close" class="btn-primary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>