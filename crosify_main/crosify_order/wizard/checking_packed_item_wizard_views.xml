<odoo>
    <data>

        <record id="checking_packed_item_wizard_form_view" model="ir.ui.view">
            <field name="name">checking_packed_item_wizard_form_view</field>
            <field name="model">checking.packed.item.wizard</field>
            <field name="arch" type="xml">
                <form class="sale_order_view_inherit_form_crosify_order">
                    <header>
                    </header>
                    <sheet>
                        <group name="main">
                            <group>
                                <field name="order_ids">
                                    <tree string="Orders" editable="bottom">
                                        <field name="order_name" readonly="0"/>
                                        <field name="order_id" column_invisible="1"/>
                                    </tree>
                                </field>

                            </group>
                            <group>
                                <field name="item_ids">
                                    <tree string="Orders" editable="bottom">
                                        <field name="order_id_fix" readonly="1"/>
                                        <field name="sale_order_line_id" column_invisible="1"/>
                                        <field name="production_id" readonly="1"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="sublevel_id" readonly="1"/>
                                    </tree>
                                </field>
                            </group>

                        </group>
                        <br/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="checking_packed_item_wizard_menu_action" model="ir.actions.act_window">
            <field name="name">Check Packed Item</field>
            <field name="res_model">checking.packed.item.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>

        <menuitem id="checking_packed_item_wizard_menu"
                  name="Check Packed Item"
                  action="checking_packed_item_wizard_menu_action"
                  groups="base.group_system,crosify_order.group_sale_team_operator"
                  parent="sale.sale_order_menu"
                  sequence="28"/>
    </data>
</odoo>