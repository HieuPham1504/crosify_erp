<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="print_item_barcode_custom">
        <t t-call="web.basic_layout">
            <t t-foreach="items_data" t-as="items">
                <div class="page">
                    <t t-foreach="items" t-as="item">
                        <div class="row border border-dark" style="margin-bottom:10px;height:113px;width:180px"
                             id="barcode-container">
                            <div class="col-6 p-3">
                                <div class="col overflow-hidden text-start order-name">
                                    <p>
                                        <t t-out="item['order_id_name']"/>
                                    </p>
                                </div>

                                <div class="col overflow-hidden text-start product-type">
                                    <p>
                                        <t t-out="item['product_type']"/>
                                    </p>
                                </div>

                                <div class="col overflow-hidden text-start">
                                    <t t-if="len(item['size']) > 0">
                                        <p>
                                            <t t-esc="item['size'][0]"/>
                                        </p>
                                    </t>
                                    <t t-else="">
                                        <div class="col overflow-hidden text-start">
                                            <p>
                                            </p>
                                        </div>
                                        <br/>
                                    </t>
                                </div>

                                <div class="col overflow-hidden text-start">
                                    <t t-if="len(item['color']) > 0">
                                        <p>
                                            <t t-esc="item['color'][0]"/>
                                        </p>
                                    </t>
                                    <t t-else="">
                                        <div class="col overflow-hidden text-start">
                                            <p>
                                            </p>
                                        </div>
                                        <br/>
                                    </t>
                                </div>

                                <div class="col overflow-hidden text-start">
                                    <img
                                            style="width:100%;height:100%;padding:0;margin-left:-80px !important;padding: 0 !important;object-fit: contain;"
                                            t-att-src="'/report/barcode/%s/%s' % ('Code128',item['production_id'])"
                                            alt="Barcode"/>
                                </div>
                                <div class="col overflow-hidden text-start">
                                    <p style="font-size:20px">
                                        <t t-esc="item['production_id']"/>
                                    </p>
                                </div>

                            </div>
                            <div class="col-6 p-3">

                                <div class="col overflow-hidden text-start">
                                    <t t-if="item['product_str']">
                                        <p style="font-size:20px">
                                            <t t-esc="item['product_str']"/>
                                        </p>
                                    </t>
                                    <t t-else="">
                                        <div class="col overflow-hidden text-start">
                                            <p style="font-size:20px">
                                            </p>
                                        </div>
                                        <br/>
                                    </t>
                                </div>

                                <div class="col overflow-hidden text-start">
                                    <p style="font-size:20px">
                                        <t t-esc="item['personalize']"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>