<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="print_item_barcode_custom">
        <t t-call="web.basic_layout">
            <t t-foreach="items" t-as="item">
                <div class="page">
                    <div class="row border border-dark" style="margin-bottom:10px;height:269px" id="barcode-container">
                        <div class="col-6 p-3">
                            <div class="col overflow-hidden text-start order-name">
                                <p style="font-size:20px">
                                    <t t-out="item['order_id_name']"/>
                                </p>
                            </div>

                            <div class="col overflow-hidden text-start product-type">
                                <p style="font-size:20px">
                                    <t t-out="item['product_type']"/>
                                </p>
                            </div>

                            <div class="col overflow-hidden text-start">
                                <t t-if="len(item['size']) > 0">
                                    <p style="font-size:20px">
                                        <t t-esc="item['size'][0]"/>
                                    </p>
                                </t>
                                <t t-else="">
                                    <div class="col overflow-hidden text-start">
                                        <p style="font-size:20px">
                                        </p>
                                    </div>
                                    <br/>
                                </t>
                            </div>

                            <div class="col overflow-hidden text-start">
                                <t t-if="len(item['color']) > 0">
                                    <p style="font-size:20px">
                                        <t t-esc="item['color'][0]"/>
                                    </p>
                                </t>
                                <t t-else="">
                                    <div class="col overflow-hidden text-start">
                                        <p style="font-size:20px">
                                        </p>
                                    </div>
                                    <br/>
                                </t>
                            </div>

                            <div class="col overflow-hidden text-start"
                                 style="width:300px;display: flex;justify-content: flex-start;">
                                <img class="img-fluid" style="width:300px;height:67px;padding:0; margin:0px"
                                     t-att-src="'/report/barcode/%s/%s' % ('Code128',item['production_id'])"
                                     alt="Barcode"/>
                            </div>
                        </div>
                        <div class="col-6 p-3">

                            <div class="col overflow-hidden text-start">
                                <t t-if="item['shelf_code']">
                                    <p style="font-size:20px">
                                        <t t-esc="item['shelf_code']"/>
                                    </p>
                                </t>
                                <t t-else="">
                                    <div class="col overflow-hidden text-start">
                                        <p style="font-size:20px">
                                        </p>
                                    </div>
                                    <br/>
                                </t>
                            </div>

                            <div class="col overflow-hidden text-start">
                                <p style="font-size:20px">
                                    <t t-esc="item['personalize']"/>
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>