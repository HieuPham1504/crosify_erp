<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="order_shipping_line_tree_view" model="ir.ui.view">
            <field name="name">order_shipping_line_tree_view</field>
            <field name="model">order.shipping.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="code" />
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="order_shipping_line_menu_action"
            model="ir.actions.act_window">
            <field name="name">Shipping Line</field>
            <field name="res_model">order.shipping.line</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="order_shipping_line_menu" name="Shipping Line"
            parent="sale.menu_sales_config"
            action="order_shipping_line_menu_action"
            sequence="32"
            groups="base.group_system"/>

    </data>
</odoo>