<odoo>
    <data>
        <record id="product_product_form_view_inherit" model="ir.ui.view">
            <field name="name">product_product_form_view_inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='detailed_type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="product_template_attribute_value_ids" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>