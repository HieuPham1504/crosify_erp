<odoo>
    <data>

        <record id="shipping_item_confirm_search_view" model="ir.ui.view">
            <field name="name">shipping_item_confirm_search_view</field>
            <field name="model">shipping.item.confirm</field>
            <field name="arch" type="xml">
                <search>
                    <separator/>
                    <filter name="draft_shipping_confirm" string="Draft Shipping Confirm" domain="[('state', '=', 'draft')]"/>
                    <separator/>
                    <filter name="done_shipping_confirm" string="Done Shipping Confirm" domain="[('state', '=', 'done')]"/>
                    <separator/>
                </search>
            </field>
        </record>

        <record id="shipping_item_confirm_tree_view" model="ir.ui.view">
            <field name="name">shipping_item_confirm_tree_view</field>
            <field name="model">shipping.item.confirm</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="relate_pickup_ids" widget="many2many_tags"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="shipping_item_confirm_form_view" model="ir.ui.view">
            <field name="name">shipping_item_confirm_form_view</field>
            <field name="model">shipping.item.confirm</field>
            <field name="arch" type="xml">
                <form class="sale_order_view_inherit_form_crosify_order">
                    <header>
                        <button string="Confirm Item" name="action_confirm_item" type="object"
                                class="btn-primary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="code"/>
                            <h1>
                                <field name="code" readonly="1" force_save="1"/>
                            </h1>
                        </div>
                        <group name="main">
                            <group>
                                <field name="date"/>
                                <field name="employee_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="relate_pickup_ids" widget="many2many_tags"
                                       options='{"no_open": True, "no_create": True}' domain="[('state', '=', 'done')]"/>
                            </group>
                            <group></group>
                        </group>
                        <label for="note"/>
                        <field name="note"/>
                        <br/>
                        <!--                        <label for="label_file_url"/>-->
                        <div class="o_row mw-50">
                            <field name="delivered_item_file_name" invisible="1"/>
                            <field name="delivered_item_file" filename="delivered_item_file_name"/>
                            <button name="action_import_items" invisible="delivered_item_file == False"
                                    class="btn btn-primary" type="object" string="Upload"/>
                        </div>
                        <br/>
                        <notebook>
                            <page name="pickup-info" string="Pickup Info">
                                <field name="pickup_order_line_ids" nolabel="1" readonly="0">
                                    <tree decoration-danger="is_error == True">
                                        <field name="pickup_id"/>
                                        <field name="pickup_date"/>
                                        <field name="order_id_fix"/>
                                        <field name="tkn_code"/>
                                        <field name="is_error" column_invisible="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="confirm-items" string="Confirm Items">
                                <field name="item_ids" nolabel="0">
                                    <tree string="Items" editable="bottom">
                                        <field name="order_id_fix" readonly="0"/>
                                        <field name="tkn_code" readonly="0"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="error-items" string="Error">
                                <field name="pickup_order_error_ids" nolabel="0" readonly="1" force_save="1">
                                    <tree string="Items">
                                        <field name="order_id_fix" readonly="0"/>
                                        <field name="tkn_code" readonly="0"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="shipping_item_confirm_menu_action" model="ir.actions.act_window">
            <field name="name">Shipping Confirm</field>
            <field name="res_model">shipping.item.confirm</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>

        <menuitem id="shipping_item_confirm_menu"
                  name="Shipping Confirm"
                  action="shipping_item_confirm_menu_action"
                  groups="base.group_system,crosify_order.group_sale_team_operator"
                  parent="sale.sale_order_menu"
                  sequence="37"/>
    </data>
</odoo>