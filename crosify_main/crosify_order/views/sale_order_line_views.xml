<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_line_search_view_inherit" model="ir.ui.view">
            <field name="name">sale_order_line_search_view_inherit</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_sales_order_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='to_invoice']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//filter[@name='my_sales_order_lines']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//filter[@name='to_invoice']" position="before">
                    <separator/>
                    <filter string="Paid Order Items" name="paid_order_items"
                            domain="[('sublevel_id.level', '=', 'L1.1')]"
                            help="Paid Order Items"/>
                    <separator/>
                </xpath>

                <xpath expr="//filter[@name='salesperson']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//filter[@name='order']" position="attributes">
                    <attribute name="string">Reference ID</attribute>
                </xpath>

                <xpath expr="//filter[@name='product']" position="before">
                    <filter string="MyAdmin Order ID" name="groupby_myadmin_order_id"
                            domain="[]"
                            context="{'group_by':'my_admin_order_id'}"/>
                </xpath>
            </field>
        </record>


        <record id="sale_order_line_tree_view_inherit" model="ir.ui.view">
            <field name="name">sale_order_line_tree_view_inherit</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Items" create="1" duplicate="0">
                        <field name="production_id" optional="show"/>
                        <field name="my_admin_order_id" optional="show"/>
                        <field name="order_id_fix" optional="show"/>
                        <field name="produce_vendor_id" optional="hide"/>
                        <field name="crosify_created_date" optional="show"/>
                        <field name="status" optional="hide"/>
                        <field name="product_type" optional="show"/>
                        <field name="product_sku" optional="show"/>
                        <field name="color_set_name" optional="show"/>
                        <field name="item_size" optional="show"/>
                        <field name="personalize" optional="show"/>
                        <field name="accessory_name" optional="hide"/>
                        <field name="sublevel_id" optional="hide"/>
                        <field name="price_subtotal" column_invisible="1"/>
                        <field name="write_date" string="Last Update" optional="hide"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record id="sale_order_line_form_view_inherit" model="ir.ui.view">
            <field name="name">sale_order_line_form_view_inherit</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="Item" class="sale_order_view_inherit_form_crosify_order">
                        <header>
                            <field name="level_id" invisible="1"/>
                            <field name="sublevel_id" widget="statusbar"
                                   domain="[('parent_id', '=', level_id), ('is_parent', '=', False)]"/>
                        </header>
                        <sheet>
                            <div class="oe_title">
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                            <group name="main">
                                <group>
                                    <field name="company_id" invisible="1"/>
                                    <field name="my_admin_order_id" string="Order ID"/>
                                    <field name="order_id_fix"/>
                                    <field name="order_id" readonly="1" force_save="1" string="Reference ID"/>
                                    <field name="priority"/>
                                </group>
                                <group>
                                    <field name="product_id" string="SKU" readonly="1" force_save="1"/>
                                    <field name="product_type"/>
                                    <field name="production_id"/>
                                    <field name="personalize"/>
                                </group>
                            </group>
                            <notebook>
                                <page id="fulfillment_tab" string="FULFILLMENT" name="fulfillment_tab">
                                    <group name="fulfillment-main">
                                        <group name="fulfillment" string="FULFILLMENT">
                                            <field name="shipping_vendor_id" options='{"no_create": True}'/>
                                            <field name="packaging_vendor_id" options='{"no_create": True}'/>
                                            <field name="production_vendor_id" options='{"no_create": True}'/>
                                            <field name="fulfill_date"/>
                                            <field name="fulfill_employee_id" options='{"no_create": True}'/>
                                        </group>
                                        <group name="tracking" string="LABEL &amp; TRACKING NUMBER">
                                            <field name="label_file_store_name" invisible="1"/>
                                            <field name="label_file" filename="label_file_store_name"/>
                                            <field name="tkn_code"/>
                                            <field name="tkn_url"/>
                                            <field name="upload_tkn_date"/>
                                            <field name="upload_tkn_by" options='{"no_create": True}'/>
                                            <field name="is_upload_tkn"/>
                                        </group>
                                    </group>
                                    <group name="other" string="FULFILLMENT OTHER">
                                        <group name="left">
                                            <field name="box_size"/>
                                            <field name="package_size"/>
                                            <field name="extra_service"/>
                                            <field name="extra_info"/>
                                            <field name="customer_note"/>
                                        </group>
                                        <group name="right">
                                            <field name="base_cost"/>
                                            <field name="logistic_cost"/>
                                            <field name="price_unit" string="Price Item"/>
                                            <field name="tips"/>
                                            <field name="note_fulfill"/>
                                        </group>
                                    </group>
                                </page>
                                <page id="design_tab" string="DESIGN &amp; PRODUCTION" name="design_tab">
                                    <group>
                                        <group name="design" string="DESIGN">
                                            <field name="designer_id" options='{"no_create": True}'/>
                                            <field name="design_file_url"/>
                                            <field name="design_date"/>
                                        </group>
                                        <group name="production" string="PRODUCTION">
                                            <field name="production_estimate_time"/>
                                            <field name="production_start_date"/>
                                            <field name="production_done_date"/>
                                            <field name="production_status"/>
                                            <field name="production_note"/>
                                        </group>
                                    </group>
                                </page>
                                <page id="shipping_and_pickup_tab" string="SHIPPING &amp; PICKUP"
                                      name="shipping_and_pickup_tab">
                                    <group name="shipping_and_pickup">
                                        <group name="pickup" string="PICKUP">
                                            <field name="address_sheft_id" options='{"no_create": True}'/>
                                            <field name="packed_date"/>
                                            <field name="pickup_date"/>
                                        </group>
                                        <group name="shipping" string="SHIPPING">
                                            <field name="shipping_cost"/>
                                            <field name="shipping_date"/>
                                            <field name="shipping_confirm_date"/>
                                        </group>
                                    </group>
                                    <group name="delivery" string="DELIVER">
                                        <field name="deliver_date"/>
                                        <field name="deliver_status"/>
                                        <field name="customer_received"/>
                                    </group>
                                </page>
                                <page id="other_info_tab" string="OTHER" name="other_info_tab">
                                    <group name="cancel_and_dispute">
                                        <group anme="cancel" string="CANCEL">
                                            <field name="cancel_date"/>
                                            <field name="cancel_status"/>
                                            <field name="cancel_reason"/>
                                        </group>
                                        <group name="dispute" string="DISPUTE">
                                            <field name="dispute_status"/>
                                            <field name="dispute_note"/>
                                        </group>
                                    </group>
                                    <group name="approve" string="APPROVE">
                                        <field name="approve_by" options='{"no_create": True}'/>
                                    </group>
                                </page>
                            </notebook>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </div>
                    </form>
                </xpath>
            </field>
        </record>

        <record id="action_change_item_state_awaiting_fulfillment" model="ir.actions.server">
            <field name="name">Awaiting Fulfillment</field>
            <field name="model_id" ref="crosify_order.model_sale_order_line"/>
            <field name="binding_model_id" ref="crosify_order.model_sale_order_line"/>
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="groups_id" eval="[(6, 0, [ref('crosify_order.group_sale_team_operator'), ref('base.group_system')])]"/>
            <field name="code">action = model.action_change_state_awaiting_fulfill()</field>
        </record>

        <record id="action_create_item_production_id" model="ir.actions.server">
            <field name="name">Create Production ID</field>
            <field name="model_id" ref="crosify_order.model_sale_order_line"/>
            <field name="binding_model_id" ref="crosify_order.model_sale_order_line"/>
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="groups_id" eval="[(6, 0, [ref('crosify_order.group_sale_team_operator'), ref('base.group_system')])]"/>
            <field name="code">action = model.action_create_item_production_id()</field>
        </record>

        <record id="action_creating_shipment_item" model="ir.actions.server">
            <field name="name">Creating Shipment</field>
            <field name="model_id" ref="crosify_order.model_sale_order_line"/>
            <field name="binding_model_id" ref="crosify_order.model_sale_order_line"/>
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="groups_id" eval="[(6, 0, [ref('crosify_order.group_sale_team_operator'), ref('base.group_system')])]"/>
            <field name="code">action = model.action_creating_shipment_for_item_model()</field>
        </record>

        <record id="action_update_fulfill" model="ir.actions.server">
            <field name="name">Update Fulfillment</field>
            <field name="model_id" ref="crosify_order.model_sale_order_line"/>
            <field name="binding_model_id" ref="crosify_order.model_sale_order_line"/>
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="groups_id" eval="[(6, 0, [ref('crosify_order.group_sale_team_operator'), ref('base.group_system')])]"/>
            <field name="code">action = model.action_update_fulfill()</field>
        </record>

        <record id="crosify_menu_sale_order_line_action" model="ir.actions.act_window">
            <field name="name">Items</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="crosify_menu_sale_order_line"
                  name="Items"
                  action="crosify_menu_sale_order_line_action"
                  parent="sale.sale_order_menu"
                  sequence="21"/>
    </data>
</odoo>