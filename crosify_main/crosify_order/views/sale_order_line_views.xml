<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_line_tree_view_inherit" model="ir.ui.view">
            <field name="name">sale_order_line_tree_view_inherit</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Items" create="1">
                        <field name="production_id" optional="show"/>
                        <field name="my_admin_order_id" optional="show"/>
                        <field name="order_id_fix" optional="show"/>
                        <field name="production_id" optional="show"/>
                        <field name="produce_vendor_id" optional="hide"/>
                        <field name="crosify_created_date" optional="show"/>
                        <field name="status" optional="hide"/>
                        <field name="product_type" optional="show"/>
                        <field name="product_sku" optional="show"/>
                        <field name="color_set_name" optional="show"/>
                        <field name="item_size" optional="show"/>
                        <field name="personalize" optional="show"/>
                        <field name="accessory_name" optional="hide"/>
                        <field name="price_subtotal" column_invisible="1"/>
                        <field name="write_date" string="Last Update" optional="hide"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record id="sale_order_line_form_view_inherit" model="ir.ui.view">
            <field name="name">sale_order_line_form_view_inherit</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="Item" class="sale_order_view_inherit_form_crosify_order">
                        <header>
                            <field name="level" widget="statusbar" options="{'clickable': '1'}"/>
                        </header>
                        <sheet>
                            <div class="oe_title">
                                <h1>
                                    <field name="display_name"/>
                                </h1>
                                <div class="oe_title ps-0 pe-2">
                                    <h2>
                                        <label for="sublevel">SubLevel</label>
                                        <span></span>
                                        <field name="sublevel" domain="[('parent_id', '=', level)]"/>
                                    </h2>
                                </div>
                            </div>
                            <group name="main">
                                <group>
                                    <field name="company_id" invisible="1"/>
                                    <field name="order_id" string="Order ID"/>
                                    <field name="order_id_fix" string="Order ID"/>
                                    <field name="channel_ref_id"/>
                                    <field name="priority"/>
                                </group>
                                <group>
                                    <field name="product_id" string="SKU"/>
                                    <field name="product_type"/>
                                    <field name="production_id"/>
                                    <field name="personalize" string="Quantity"/>
                                </group>
                            </group>
                            <notebook>
                                <page id="fulfillment_tab" string="FULFILLMENT" name="fulfillment_tab">
                                    <group name="fulfillment-main">
                                        <group name="fulfillment" string="FULFILLMENT">
                                            <field name="shipping_vendor_id" options='{"no_create": True}'/>
                                            <field name="packaging_vendor_id" options='{"no_create": True}'/>
                                            <field name="production_vendor_id" options='{"no_create": True}'/>
                                            <field name="fulfill_date"/>
                                        </group>
                                        <group name="tracking" string="LABEL &amp; TRACKING NUMBER">
                                            <field name="production_vendor_id"/>
                                            <field name="label_file_store_name" invisible="1"/>
                                            <field name="label_file" filename="label_file_store_name"/>
                                        </group>
                                    </group>
                                    <group name="other" string="FULFILLMENT OTHER">
                                        <group name="left">
                                            <field name="box_size"/>
                                            <field name="package_size"/>
                                            <field name="extra_service"/>
                                            <field name="extra_info"/>
                                            <field name="customer_note"/>
                                        </group>
                                        <group name="right">
                                            <field name="base_cost"/>
                                            <field name="logistic_cost"/>
                                            <field name="price_unit" string="Price Item"/>
                                            <field name="tips"/>
                                            <field name="note_fulfill"/>
                                        </group>
                                    </group>
                                </page>
                                <page id="design_tab" string="DESIGN &amp; PRODUCTION" name="design_tab">
                                    <group>
                                        <group name="design" string="DESIGN">
                                            <field name="designer_id" options='{"no_create": True}'/>
                                            <field name="design_file_name" invisible="1"/>
                                            <field name="design_file" filename="design_file_name"/>
                                            <field name="design_date"/>
                                        </group>
                                        <group name="production" string="PRODUCTION">
                                            <field name="production_estimate_time"/>
                                            <field name="production_start_date"/>
                                            <field name="production_done_date"/>
                                            <field name="production_status"/>
                                            <field name="production_note"/>
                                        </group>
                                    </group>
                                </page>
                                <page id="shipping_and_pickup_tab" string="SHIPPING &amp; PICKUP"
                                      name="shipping_and_pickup_tab">
                                    <group name="shipping_and_pickup">
                                        <group name="pickup" string="PICKUP">
                                            <field name="address_sheft"/>
                                            <field name="packed_date"/>
                                            <field name="pickup_date"/>
                                        </group>
                                        <group name="shipping" string="SHIPPING">
                                            <field name="shipping_cost"/>
                                            <field name="shipping_date"/>
                                            <field name="shipping_confirm_date"/>
                                        </group>
                                    </group>
                                    <group name="delivery" string="DELIVER">
                                        <field name="deliver_date"/>
                                        <field name="deliver_status"/>
                                        <field name="customer_received"/>
                                    </group>
                                </page>
                                <page id="other_info_tab" string="OTHER" name="other_info_tab">
                                    <group name="cancel_and_dispute">
                                        <group anme="cancel" string="CANCEL">
                                            <field name="cancel_date"/>
                                            <field name="cancel_status"/>
                                            <field name="cancel_reason"/>
                                            <field name="approve_by"/>
                                        </group>
                                        <group name="dispute" string="DISPUTE">
                                            <field name="dispute_status"/>
                                            <field name="dispute_note"/>
                                        </group>
                                    </group>
                                    <group name="approve" string="APPROVE">
                                        <field name="approve_by" options='{"no_create": True}'/>
                                    </group>
                                </page>

