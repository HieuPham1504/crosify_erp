<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_line_level_tree_view" model="ir.ui.view">
            <field name="name">sale_order_line_level_tree_view</field>
            <field name="model">sale.order.line.level</field>
            <field name="arch" type="xml">
                <tree string="Level" editable="bottom">
                    <field name="level"/>
                    <field name="name"/>
                    <field name="next_level_ids" widget="many2many_tags"/>
                    <field name="is_parent"/>
                    <field name="parent_id" domain="[('is_parent', '=', True)]"/>
                </tree>
            </field>
        </record>

        <record id="crosify_menu_sale_order_line_level_action" model="ir.actions.act_window">
            <field name="name">Level</field>
            <field name="res_model">sale.order.line.level</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="crosify_menu_sale_order_line_level"
                  name="Item Level"
                  parent="sale.menu_sale_config" action="crosify_menu_sale_order_line_level_action"
                  sequence="21"/>
    </data>
</odoo>