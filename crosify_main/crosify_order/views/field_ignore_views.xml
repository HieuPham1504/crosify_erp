<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="field_ignore_view_tree" model="ir.ui.view">
            <field name="name">field_ignore_view_tree</field>
            <field name="model">fields.ignore</field>
            <field name="arch" type="xml">
                <tree string="field_ignore_tree" editable="bottom">
                    <field name="name"
                           widget="DynamicModelFieldSelectorChar"
                           options="{'model': 'model' or 'sale.order.line'}"/>
                    <field name="model_id" />
                    <field name="model" />
                </tree>
            </field>
        </record>

        <record id="field_ignore_view_form" model="ir.ui.view">
            <field name="name">field_ignore_view_form</field>
            <field name="model">fields.ignore</field>
            <field name="arch" type="xml">
                <form string="field_ignore_form">
                    <sheet>
                        <group>
                            <field name="name"
                                   widget="DynamicModelFieldSelectorChar"
                                   options="{'model': 'model' or 'sale.order.line'}"/>
                            <field name="model_id" invisible="1"/>
                            <field name="model" invisible="1"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>