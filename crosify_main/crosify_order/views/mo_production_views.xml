<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mo_production_tree_view" model="ir.ui.view">
            <field name="name">mo_production_tree_view</field>
            <field name="model">mo.production</field>
            <field name="arch" type="xml">
                <tree string="Fulfillment To Production">
                    <field name="code"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="note"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="mo_production_form_view" model="ir.ui.view">
            <field name="name">mo_production_form_view</field>
            <field name="model">mo.production</field>
            <field name="arch" type="xml">
                <form string="Fulfillment To Production" class="sale_order_view_inherit_form_crosify_order">
                    <header>
                        <button name="action_produce_items" string="Produce Items"
                                type="object" class="oe_highlight" data-hotkey="w" title="Produce Items"
                                invisible="state == 'production'"/>
                        <button name="action_back_to_fulfill_vendor_items" string="Back to Fulfill Vendor"
                                type="object" class="oe_highlight" data-hotkey="w" title="Back to Designed"
                                invisible="state == 'draft'"/>

                        <button name="action_export_xlsx" string="Export File"
                                type="object" class="oe_highlight" title="Export File"
                                invisible="state == 'draft'"/>
                        <field name="state"  widget="statusbar" invisible="0"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="code" readonly="1"/>
                            </h1>
                        </div>
                        <group name="main-description">
                            <group>
                                <field name="date" readonly="state != 'draft'"/>
                                <field name="employee_id" readonly="state != 'draft'"/>
                                <field name="note" readonly="state != 'draft'"/>
                            </group>
                            <group></group>
                        </group>
                        <notebook>
                            <page string="Items" name="items">
                                <field name="mo_production_line_ids" force_save="1" domain="[('sublevel_id.level', '=', 'L4.0')]" readonly="state != 'draft'">
                                    <tree editable="bottom" create="false">
                                        <field name="production_id" readonly="1"/>
                                        <field name="product_id" readonly="1" string="SKU"/>
                                        <field name="product_template_attribute_value_ids" readonly="1" widget="many2many_tags"/>
                                        <field name="personalize" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="crosify_menu_mo_production_action" model="ir.actions.act_window">
            <field name="name">Fulfillment To Production</field>
            <field name="res_model">mo.production</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="crosify_menu_mo_production"
                  name="Fulfillment To Production"
                  action="crosify_menu_mo_production_action"
                  parent="sale.sale_order_menu"
                   groups="base.group_system,crosify_order.group_sale_team_operator,crosify_order.group_producer_team"
                  sequence="22"/>
    </data>
</odoo>