<odoo>
    <data>
        <record id="view_res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//h1/following-sibling::div[1]" position="before">
                    <field name="res_partner_code" string="Code" readonly="1" />
                </xpath>
            </field>
        </record>

        <record id="view_res_partner_filter_inherit" model="ir.ui.view">
            <field name="name">res.partner.filter.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter" />
            <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="filter_domain">['|', '|', '|', '|', '|', ('complete_name',
                        'ilike', self), ('ref', '=', self), ('email', 'ilike', self), ('vat',
                        'ilike', self), ('company_registry', 'ilike', self), ('res_partner_code',
                        'ilike', self)]</attribute>
                </field>
                <xpath expr="//filter[@name='type_person']" position="before">
                    <filter string="None Partner Code" name="none_partner_code" domain="[('res_partner_code', '=', False)]"/>
                </xpath>
            </field>
        </record>

        <record id="action_generate_code" model="ir.actions.server">
            <field name="name">Generate Code</field>
            <field name="model_id" ref="crosify_order.model_res_partner" />
            <field name="binding_model_id" ref="crosify_order.model_res_partner" />
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="groups_id"
                eval="[(6, 0, [ref('crosify_order.group_sale_team_operator'), ref('base.group_system')])]" />
            <field name="code">action = model.action_generate_code_for_partner_model()</field>
        </record>
    </data>
</odoo>